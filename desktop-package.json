{
  "name": "bibliotheque-scolaire",
  "version": "1.0.0",
  "description": "Logiciel de Gestion de Bibliothèque Scolaire",
  "main": "electron-main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build-electron": "electron-builder",
    "dist": "npm run build && electron-builder",
    "build": "cd frontend && npm run build",
    "start-backend": "cd backend && python server.py",
    "pack": "electron-builder --dir",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.bibliotheque.scolaire",
    "productName": "Bibliothèque Scolaire",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/build/**/*",
      "backend/**/*",
      "electron-main.js",
      "preload.js",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  }
}